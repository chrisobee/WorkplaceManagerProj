@model WorkplaceManager.ViewModels.ManagerIndexVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-3">
        @foreach(Employee employee in Model.Employees)
        {
            <div class="row">
                <h4>@employee.Name</h4>
                @foreach(Job job in employee.AssignedJobs)
                {
                    <h6>@job.Name</h6>
                }
            </div>
        }
    </div>
    <div class="col-md-9">

    </div>
</div>

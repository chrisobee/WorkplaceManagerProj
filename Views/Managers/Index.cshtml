@model WorkplaceManager.ViewModels.ManagerIndexVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-3">
        @if (Model.Employees.Count == 0)
        {
            <h5>No Employees Added Yet!</h5>
        }
        else
        {
            @foreach (Employee employee in Model.Employees)
            {
                <div class="row">
                    <h6>@employee.FirstName</h6>
                    <button type="button" class="btn btn-secondary" data-toggle="popover" data-placement="right" data-content="@employee.AssignedJobs.Select(j => j.Name)" data-original-title="Assigned Jobs">Assigned Jobs</button>
                </div>
            }
        }
        <a type="btn btn-primary" asp-action="CreateEmployee">Add New Employee</a>
    </div>
    <div class="col-md-9" style="background-color:rosybrown">
        <a asp-action="Create" asp-controller="Projects">Add New Project</a>
        @foreach(Project project in Model.Projects)
        {
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <h4>@project.Name</h4>
                    </div>
                    <div class="row">
                        <h5>@project.Deadline.Value.ToString("d")</h5>
                    </div>
                    <div class="row">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="'@project.PercentComplete'" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">Jobs</div>
                        <div class="card-body">
                            @foreach(Job job in project.Jobs)
                            {
                                <div class="row">
                                    <div class="col-md-2">
                                        <input type="checkbox" onclick="SaveCheckChange(@job.JobId)" asp-for="@job.IsComplete" />
                                    </div>
                                    <div class="col-md-5">
                                        <a asp-action="Details" asp-controller="Jobs" asp-route-id="@job.JobId">@job.Name</a>
                                    </div>
                                    <div class="col-md-5">
                                        <p>@job.Deadline.Value.ToString("d")</p>
                                    </div>
                                </div>
                            }
                            <a style="position: absolute; bottom:0; right:0;" asp-action="Create" asp-controller="Jobs" asp-route-projectId="@project.ProjectId">Add Job</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function SaveCheckChange(jobId) {
        console.log(jobId);
        window.location.href = '@Url.Action("UpdateJob", "Jobs")' + '/' + jobId;
    }
</script>
